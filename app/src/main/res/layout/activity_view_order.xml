<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ryan.deliverfood.ViewOrderActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/mainLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Status:"
                android:textSize="16sp"
                android:id="@+id/currentStatus"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/orderStatus"
                android:text="Order status: "/>

            <TextView
                style="@style/Order_Items_TextView"
                android:text="Client Name: "
                android:id="@+id/clientNameTV"/>

            <TextView
                style="@style/Order_Items_TextView"
                android:text="Client Address"
                android:id="@+id/clientAddress"/>

            <TextView
                style="@style/Order_Items_TextView"
                android:text="Client Phone"
                android:id="@+id/clientPhone"/>

            <TextView
                style="@style/Order_Items_TextView"
                android:text="Restaurant Name"
                android:id="@+id/restaurantTV"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/orderItemsLayout">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
